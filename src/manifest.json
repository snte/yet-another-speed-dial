{
  "manifest_version": 2,
  "name": "yet another speed dial",
  "description": "A modern speed dial for Firefox and Chrome.",
  "default_locale": "en",
  "version": "1.6.3",
  "author": "dev@conceptualspace.net",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "bookmarks",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "scripts": [ "js/lib/browser-polyfill.min.js", "js/background.js" ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/action-icon16.png",
      "24": "icons/action-icon24.png",
      "32": "icons/action-icon32.png"
    },
    "theme_icons": [
      {
        "light": "icons/action-icon16-light.png",
        "dark": "icons/action-icon16.png",
        "size": 16
      },
      {
        "light": "icons/action-icon24-light.png",
        "dark": "icons/action-icon24.png",
        "size": 24
      },
      {
        "light": "icons/action-icon32-light.png",
        "dark": "icons/action-icon32.png",
        "size": 32
      }
    ],
    "default_title": "Add to Speed Dial"
  }
}
